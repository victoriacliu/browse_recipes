{{!-- Just some plain text --}}

<h1>Recipes database</h1>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>


{{!-- The Data from our Database --}}
<header>
    <nav class='global'>
        <a href='/'>Home Page </a> </br>
        <a href='/categories'>Categories</a></br>
        <a href='/ingredients'> Ingredients </a>
    </nav>
</header>
{{!-- Create a table --}}
<table id="categories-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>
        {{#each data}}
        <tr data-value={{this.categoryID}}>
            <td>{{this.categoryID}}</td>
            <td>{{this.category}}</td>
            <td><button onclick="deleteCategory({{this.categoryID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_categories.js"></script>

<h2>Adding Data using an HTML form</h2>
<p>To add a new person, please enter their information below nad click `Submit`!</p>
<form id="add-category-form" method="POST" action="/add-category-form">
    <label for="input-category"> Category: </label>
    <input type="text" name="input-category" id="input-category">
    <input type="submit">
</form>